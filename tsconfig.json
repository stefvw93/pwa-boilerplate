{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "__compiled/src",
    "target": "es6",
    "paths": {
      "@authentication/*": ["authentication/*"],
      "@common/*": ["common/*"],
      "@sub-modules/*": ["sub-modules/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
