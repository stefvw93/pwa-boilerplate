{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "__compiled",
    "target": "es6",
    "paths": {
      "@common/*": ["common/*"],
      "@components/*": ["components/*"],
      "@enums/*": ["enums/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@typings/*": ["typings/*"],
      "@views/*": ["views/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
